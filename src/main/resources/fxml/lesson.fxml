<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" >
	<BorderPane fx:id="container" >

		<children>
			<HBox fx:id="topLabelsHBox">
				<children>
					<Label fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" text=""/>
					<Label fx:id="pointsLabel" text=""/>
				</children>
			</HBox>

			<JFXTabPane fx:id="exercisesTabPane"/>

			<JFXDialog fx:id="dialog" maxHeight="100.0" maxWidth="600.0" minHeight="100.0" minWidth="600.0" prefHeight="100.0" prefWidth="600.0">
				<JFXDialogLayout>
					<heading>
						<Label>Finish lesson</Label>
					</heading>
					<body>
						<Label>Congratulations! You finished this lesson. You can stay in this lesson or go back home.
						</Label>
					</body>
					<actions>
						<JFXButton fx:id="stayButton" styleClass="dialog-accept">Stay
						</JFXButton>
						<JFXButton fx:id="leaveButton" styleClass="dialog-accept">Leave
						</JFXButton>
					</actions>
				</JFXDialogLayout>
			</JFXDialog>

		</children>
	</BorderPane>
</StackPane>
